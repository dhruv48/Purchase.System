@model Purchase.System.Common.ProductTypeMst
@{
    ViewBag.Title = "CreateUpdateForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "ProductType"))
{
    <div class="card">
        <div class="card-body">
            <h2 style="margin-top:10px">Create Product</h2>
            <hr />
            <div class="form-horizontal" style="margin-top:20px">
                <div class="form-group">
                    @Html.LabelFor(x => x.Description, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-control-static">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="save" class="btn btn-primary" style="margin-top:5px" />
                    </div>
                </div>


            </div>
        </div>
    </div>

}

