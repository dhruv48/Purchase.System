@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "RoleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@Html.ActionLink("Create New Role", "CreateRole", "Role")
<h2>Role List</h2>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Role Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.Id, }, new { @class = "btn btn-info fas fa-edit" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }
    </tbody>
</table>



